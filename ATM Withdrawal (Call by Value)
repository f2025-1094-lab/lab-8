#include <iostream>
using namespace std;
void attemptWithdraw(int balance, int amount) {
    cout<"Attempting withdrawal"<<endl;
    if (amount <= balance) {
        balance -= amount;
        cout << "Withdrawal successful. New balance inside function: " << balance << endl;
    } else {
        cout << "Withdrawal failed. Insufficient funds"<<endk;
    }
}
int main() {
    int balance = 5000;
    int withdrawAmount = 1200;
    cout<<"Balance before withdrawal in main"<<balance<<endl;
    attemptWithdraw(balance, withdrawAmount);
    cout<<"Balance in main after function call"<< balance<<endl;
    return 0;
}
